<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Settings">

    <Switch
        android:id="@+id/SoundSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/baumans"
        android:showText="true"
        android:text="Sound  "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GenderHdr" />

    <Switch
        android:id="@+id/VibrationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="338dp"
        android:showText="true"
        android:text="Vibration  "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SoundSwitch" />

    <TextView
        android:id="@+id/FacebookIdVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/baumans"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/NameVal"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/NameHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/baumans"
        android:text="Name:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/GenderHdr"
        app:layout_constraintEnd_toStartOf="@+id/NameVal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/FacebookIdHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/baumans"
        android:text="Facebook ID:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/NameHdr"
        app:layout_constraintEnd_toStartOf="@+id/FacebookIdVal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/GenderHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="479dp"
        android:fontFamily="@font/baumans"
        android:text="Gender:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GenderVal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/GenderVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="479dp"
        android:fontFamily="@font/baumans"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/NameVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/baumans"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/GenderVal"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profileHdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="624dp"
        android:fontFamily="@font/baumans"
        android:text="Profile:"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsHdr" />

    <TextView
        android:id="@+id/settingsHdr"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginStart="179dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="680dp"
        android:fontFamily="@font/baumans"
        android:text="Settings"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>