<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Welcome">

    <Button
        android:id="@+id/faqButton"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="326dp"
        android:background="@drawable/costum_button"
        android:fontFamily="@font/baumans"
        android:onClick="enterWelcome"
        android:text="@string/start_tutorial_button_title"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameInWelcome" />

    <TextView
        android:id="@+id/userNameInWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="522dp"
        android:fontFamily="@font/baumans"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeNeuUserText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/WelcomeNeuUserText"
        android:layout_width="201dp"
        android:layout_height="92dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="557dp"
        android:fontFamily="@font/baumans"
        android:text="@string/welcome_new_user"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/settingsBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="341dp"
        android:layout_marginBottom="661dp"
        android:src="@drawable/cogs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.appcompat.widget.AppCompatImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>